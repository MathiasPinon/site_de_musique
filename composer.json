{
    "name": "pino0017/php-crud-music",
    "description": "DÃ©veloppement d'une application Web de consultation et modification de morceaux de musique",
    "type": "project",
    "license": "Copyleft",
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Mathias Pinon",
            "email": "mathias.pinon@etudiant.univ-reims.fr"
        }
    ],
    "require": {
        "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.16",
        "codeception/codeception": "~4.2",
        "codeception/module-phpbrowser": "~1",
        "codeception/module-asserts": "~1",
        "codeception/module-db": "~1"
    },
    "scripts": {
        "start:linux": [
            "bin/run-server.sh "
        ],
        "test:cs": [
            "php vendor/bin/php-cs-fixer fix --dry-run"
        ],
        "fix:cs": [
            "php vendor/bin/php-cs-fixer fix"
        ],
        "start:windows": [
            "bin/run-server.bat"
        ],
        "test:crud": [
            "php vendor/bin/codecept run Crud"
        ],
        "test:codecept": [
            "@test:crud"
        ],
        "test": [
            "@test:crud",
            "@test:codecept"
        ]
    },
    "config": {
        "process-timeout": 0
    }
}
